<h1>Movies</h1>
<a href="/">Back to Index</a>
<br />
<a href="/movies/create">Create a new movie</a>
<ul>
  {{#each movies}}
    <li>
      <p>Title: {{title}}</p>
      <p>Genre: {{genre}}</p>
      <p>Plot: {{plot}}</p>
      <p>Cast:</p>
      <ul>
        {{#each cast}}
          <li>{{name}}</li>
        {{/each}}
      </ul>
      <a href="movies/{{_id}}">View details</a>
    </li>
  {{/each}}
  <br />
</ul>